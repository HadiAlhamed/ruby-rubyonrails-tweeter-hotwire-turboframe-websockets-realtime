<%= turbo_frame_tag comment do %>
  <div class="card border-0 border-start border-3 border-primary bg-light mb-3 shadow-sm">
    <div class="card-body p-3">
      
      <%# Header Row: Email and Actions %>
      <div class="d-flex align-items-center justify-content-between mb-2">
        <div class="d-flex align-items-center">
          <div class="fw-bold text-primary small">
            <%= comment.user.email %>
          </div>
          <span class="text-muted mx-2" style="font-size: 0.8rem;">â€¢</span>
          <div class="text-muted" style="font-size: 0.8rem;">
            <%= time_ago_in_words(comment.created_at) %> ago
          </div>
        </div>

        <%# Action Buttons %>
        <div class="d-flex align-items-center gap-2">
          <%= link_to edit_comment_path(comment), class: "btn btn-sm btn-link text-decoration-none text-secondary p-0 me-2" do %>
            <small>Edit</small>
          <% end %>
          
          <%= button_to comment_path(comment), 
              method: :delete, 
              data: { turbo_confirm: "Are you sure?" }, 
              class: "btn btn-sm btn-outline-danger border-0 p-0 px-1" do %>
            <small>Delete</small>
          <% end %>
        </div>
      </div>

      <%# Comment Body %>
      <div class="card-text text-dark" style="font-size: 0.95rem; line-height: 1.5;">
        <%= comment.body %>
      </div>

    </div>
  </div>
<% end %>