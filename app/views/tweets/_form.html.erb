<%= form_with model: tweet , id: dom_id(tweet) do |form| %>
    <%= render partial: "shared/error_messages" , locals: {form: form} %>
    <div class = "mb-3">
        <%= form.label :body , class: "form-label"%>
        <%= form.text_area :body ,placeholder: "what's on your mind?"  ,disabled: current_user_id.nil? ,class: "form-control"%>
    </div>
    <div class = "mb-3">
        <%= form.submit class: "btn btn-primary" , disabled: current_user_id.nil? %>
</div>
<%end%>