<div class = "d-flex flex-column">
    <h1>Tweeter</h1>
    <%= turbo_frame_tag "tweet_form" do %>
        <%= render partial: "form" , locals: {tweet: @tweet} %>
    <%end%>
    <%= turbo_stream_from "tweets" %> <!-- telling javascript to stream from the tweets stream  -->
    <%= turbo_frame_tag "tweets" do %>
            <%= render @tweets %>
    <%end%>
</div>